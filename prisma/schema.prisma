generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @map("_id")
  username        String    @unique
  hashed_password String
  isVerified      Boolean   @default(false)
  lastLoggedIn    DateTime  @default(now())
  userPodIds      String[]  
  userPods        UserPod[] 
  seenEchoIds     String[]  
  seenEchoes      Echo[]    @relation("seenBy", fields: [seenEchoIds], references: [id])
  ownedEchoIds    String[]  
  ownedEchoes     Echo[]    @relation("owner")
  sessions        Session[]
}

model Session {
  id        String   @id @map("_id")
  userId    String   
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

/// A Pod is a group of users that can share passwords with eachother
model Pod {
  id          String    @id @map("_id") @default(cuid())
  name        String
  description String
  userPodIds  String[] 
  userPods    UserPod[] 
  echoIds     String[]  @db.ObjectId
  echoes      Echo[]
}

model UserPod {
  id      String      @id @map("_id") @default(cuid())
  userId  String      
  user    User        @relation(fields: [userId], references: [id])
  podId   String      
  pod     Pod         @relation(fields: [podId], references: [id])
  type    UserPodType
}

enum UserPodType {
  STANDARD
  INVITED
  ADMIN
}

model Echo {
  id          String    @id @map("_id") @default(cuid())
  ownerId     String    
  owner       User      @relation("owner", fields: [ownerId], references: [id])
  podId       String    
  pod         Pod       @relation(fields: [podId], references: [id])
  title       String
  description String
  username    String
  password    String
  seenByIds   String[]  
  seenBy      User[]    @relation("seenBy", fields: [seenByIds], references: [id])
  createdDate DateTime
  expiration  DateTime?
}
